<?xml version="1.0" ?>
<config>
	<tabs>
        <cws translate="label">
            <label>MageBees</label>
            <sort_order>100</sort_order>
        </cws>
    </tabs>
	<sections>
		<productlabel translate="label">
			<label>Product Label</label>
            <sort_order>200</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <tab>cws</tab>
			<groups>
				<general translate="label">
					<label>General</label>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
					<fields>
						<enable translate="label tooltip comment">
							<label>Enable Product Label</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment><![CDATA[Select Yes for display label on frontend.]]></comment>
						</enable>
						<image translate="label tooltip comment">
							<label>Display Default Image If Label Not Uploaded</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment><![CDATA[Select Yes for display default label image if not uploaded.]]></comment>
						</image>
						<display_label_on translate="label tooltip comment">
							<label>Display Label on Pages</label>
							<frontend_type>multiselect</frontend_type>
							<source_model>productlabel/system_config_source_pages</source_model>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment><![CDATA[Select pages on which you want to display label.]]></comment>
						</display_label_on>
					</fields>
				</general>
				<labelsize translate="label">
					<label>Manage Label Size</label>
					<sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
					<fields>
						<width_category translate="label tooltip comment">
							<label>Width in Product Listing Page</label>
							<frontend_type>text</frontend_type>
							<sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
							<validate>validate-greater-than-zero</validate>
							<comment><![CDATA[Set width of category page label in pixel]]></comment>
						</width_category>
						<height_category translate="label tooltip comment">
							<label>Height in Product Listing Page</label>
							<frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
							<comment><![CDATA[Set height of category page label in pixel]]></comment>
							<validate>validate-greater-than-zero</validate>
						</height_category>
						<width_product translate="label tooltip comment">
							<label>Width in Product View Page</label>
							<frontend_type>text</frontend_type>
							<sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
							<validate>validate-greater-than-zero</validate>
							<comment><![CDATA[Set width of product page label in pixel]]></comment>
						</width_product>
						<height_product translate="label tooltip comment">
							<label>Height in Product View Page</label>
							<frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
							<validate>validate-greater-than-zero</validate>
							<comment><![CDATA[Set height of product page label in pixel]]></comment>
						</height_product>
					</fields>
				</labelsize>
			</groups>
			<groups>
                <support translate="label">
                    <label>Info</label>
                    <frontend_type>text</frontend_type>
                    <frontend_model>productlabel/adminhtml_system_config_form_fieldset_support_support</frontend_model>
                    <sort_order>120</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                </support>
            </groups>
		</productlabel>
	</sections>
</config>